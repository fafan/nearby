{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1><span>Search Nearby Application</span> for Australian Post Codes</h1>
            </div>

            <div id="next">
                Please enter Location Name here (e.g Sydney, Eldorado) : <input id="text-location" name="city" value="" />
                <br><br>
                OR<br><br>

                Please enter Postcode here (e.g 2000, 3500): <input id="text-postcode" name="postcode" value="" />
                <br><br>

                Please enter distance (in Kilometers e.g 15): <input id="text-distance" name="postcode" value="15" />
                <br>

            </div>
            <br><br>
            <button id="btn-search" class="btn btn-primary">Search Now</button>

        </div>

        <script src="index.js" async="false"></script>

        <script>
          document.getElementById("text-location").addEventListener("click", function(e){
              document.getElementById("text-postcode").value = "";
          })

          document.getElementById("text-postcode").addEventListener("click", function(e){
              document.getElementById("text-location").value = "";
          })

          document.getElementById("btn-search").addEventListener("click", function(e){
          	e.preventDefault()

            if (document.getElementById("text-postcode").value == "") {
                var name = document.getElementById("text-location").value;
                var distance = document.getElementById("text-distance").value;
                /*
                ajax_get('/api/v1/searchByName?name=' + name, function(data){
                    data = JSON.parse(data);
                    ajax_get('/api/v1/searchNearby?lat= ' + data[0].latitude + '&lng=' + data[0].longitude +
                      '&distance=' + distance + '&unit=km', function(response){
                      var result = '';
                      response = JSON.parse(response);
                      response.forEach(function(row) {
                         result += '<tr>';
                         result += '<td>' + row.postcode + '</td>';
                         result += '<td>' + row.place_name + '</td>';
                         result += '<td>' + row.state_name + '</td>';
                         result += '<td>' + row.state_code + '</td>';
                         result += '</tr>';
                      });
                      document.getElementById("search-result").innerHTML = result;
                      showResult(response)
                    })
                })
                */
                location.href = "/discover?name=" + name + "&distance=" + distance + "&unit=km";
            }
            else if (document.getElementById("text-location").value == "") {
                var postcode = document.getElementById("text-postcode").value;
                var distance = document.getElementById("text-distance").value;
                /*
                ajax_get('/api/v1/searchByPostcode?code=' + postcode, function(data){
                    data = JSON.parse(data);
                    ajax_get('/api/v1/searchNearby?lat= ' + data[0].latitude + '&lng=' + data[0].longitude +
                      '&distance=' + distance + '&unit=km', function(response){
                      var result = '';
                      response = JSON.parse(response);
                      response.forEach(function(row) {
                         result += '<tr>';
                         result += '<td>' + row.postcode + '</td>';
                         result += '<td>' + row.place_name + '</td>';
                         result += '<td>' + row.state_name + '</td>';
                         result += '<td>' + row.state_code + '</td>';
                         result += '</tr>';
                      });
                      document.getElementById("search-result").innerHTML = result;
                      showResult(response)
                    })
                })
                */
                location.href = "/discover?postcode=" + postcode + "&distance=" + distance + "&unit=km";
            }

          });

          function showResult(response) {
            $("#btn-modal").click();
          }

        </script>

        <button type="button" id="btn-modal" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal" style="display: none;">Open Modal</button>

        <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Search Result :</h4>
              </div>
              <div class="modal-body">
                <table id="table-search-result" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                          <th>Post Code</th>
                          <th>Place Name</th>
                          <th>State Name</th>
                          <th>State Code</th>
                      </tr>
                  </thead>
                  <tbody id="search-result">
                  </tbody>
                </table>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>

          </div>
        </div>

    </div>
{% endblock %}

{% block stylesheets %}
<style>
    body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
    h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
    h1 { font-size: 36px; }
    h2 { font-size: 21px; margin-bottom: 1em; }
    p { margin: 0 0 1em 0; }
    a { color: #0000F0; }
    a:hover { text-decoration: none; }
    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
    #container { padding: 2em; }
    #welcome, #status { margin-bottom: 2em; }
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
</style>
{% endblock %}
